{
  "title": "Actor input",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "startUrls": {
      "title": "Start URLs",
      "type": "array",
      "description": "List of URLs to start from.",
      "editor": "requestListSources",
      "prefill": [
        { "url": "https://example.com" }
      ]
    },
    "maxRequests": {
      "title": "Max requests",
      "type": "integer",
      "minimum": 1,
      "maximum": 10000,
      "default": 100
    },
    "headless": {
      "title": "Headless",
      "type": "boolean",
      "default": true
    },
    "saveScreenshot": {
      "title": "Save screenshot",
      "type": "boolean",
      "default": true
    },
    "screenshotFullPage": {
      "title": "Full page screenshot",
      "type": "boolean",
      "default": true
    },
    "viewportWidth": {
      "title": "Viewport width",
      "type": "integer",
      "default": 1280,
      "minimum": 320,
      "maximum": 3840
    },
    "viewportHeight": {
      "title": "Viewport height",
      "type": "integer",
      "default": 800,
      "minimum": 320,
      "maximum": 2160
    }
  }
}
